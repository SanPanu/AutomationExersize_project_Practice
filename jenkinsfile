pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git 'https://github.com/SanPanu/AutomationExersize_project_Practice.git'
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean test'
            }
        }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
    }
}
